<div id="userDetails">
  <h2 id="userDetailsTitle">Your information</h2>
  <div class="userDetailsWrapper">
    <label class="userDetailsLabel">ID: </label>
    <span class="userDetailsValues">{{id}}</span>
  </div>

  <div class="userDetailsWrapper">
    <label class="userDetailsLabel">Username: </label>
    <span class="userDetailsValues">{{username}}</span>
  </div>

  <div class="userDetailsWrapper">
    <label class="userDetailsLabel">First name: </label>
    <span class="userDetailsValues">{{firstName}}</span>
  </div>

  <div class="userDetailsWrapper">
    <label class="userDetailsLabel">Last name: </label>
    <span class="userDetailsValues">{{lastName}}</span>
  </div>

  <div class="userDetailsWrapper">
    <label class="userDetailsLabel">E-mail: </label>
    <span class="userDetailsValues">{{email}}</span>
  </div>

  <div class="userDetailsWrapper">
    <label class="userDetailsLabel">Account created at: </label>
    <span id="userCreatedAt" class="userDetailsValues">{{createdAt}}</span>
  </div>

  <button id="resetPasswordButton" class="btn btn-success">Reset password</button>
  <button id="backToCalendarButton" class="btn">Return to calendar</button>
</div>
